<section class="section">
  <div class="container">
    <h1 class="title">
      Your Created events
    </h1>
  </div>
</section>
<section class="section">
  <div class="container">
    <% if current_user.created_events.any? %>
      <% current_user.created_events.each do | event | %>
        <div class= "box">
          <div class= "content">
            <h2 class= "title"><%= event.name %></h2>
            <p>Date: <%= event.date %></p>
            <p>Location: <%= event.location %></p>
            <p>Creator: <%= event.creator_display_name %></p>
          </div>
        </div>
      <% end %>
      <% else %>
      <div class = "block">
        You have no created events.
      </div>
    <% end %>
  </div>
</section>